    
#import needed libraries   
import turtle
from turtle import *

#Define constants
RIGHT_EDGE= 400
LEFT_EDGE = -400
BOTTOM_EDGE = -400
TOP_EDGE = 400
BALL_SPEED = 5

#This function will update the location of the ball
def moveBall(ballSpeed):
    ball.forward(ballSpeed)
    

#Global variables
screen = Screen()
screen.title("My window")
screen.bgcolor("green")

ball = Turtle()
ball.clear()
ball.penup()

ball.shape("circle")
ball.color("blue")
ball.position()
ball.speed(0)
ball.sety(0)
ball.setheading(20)

screen.tracer(0) #turn off auto screen updates to make it faster


while True:
    moveBall(BALL_SPEED)
    screen.update()
   
